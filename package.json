{
  "name": "dora-plugin-atool-build",
  "version": "0.4.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/dora-js/dora-plugin-atool-build"
  },
  "homepage": "https://github.com/dora-js/dora-plugin-atool-build",
  "author": "chencheng <sorrycc@gmail.com>",
  "license": "MIT",
  "main": "./lib",
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "test": "babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha --no-timeouts",
    "debug": "./node_modules/.bin/mocha --require babel-core/register --no-timeouts",
    "lint": "eslint --ext .js src",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "atool-build": "^0.5.0",
    "chalk": "^1.1.1",
    "koa-webpack-dev-middleware": "~1.0.1",
    "object-assign": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.2.4",
    "babel-core": "~6.1.21",
    "babel-istanbul": "^0.5.9",
    "babel-plugin-add-module-exports": "~0.1.1",
    "babel-preset-es2015": "~6.1.18",
    "babel-preset-stage-0": "~6.1.18",
    "coveralls": "^2.11.6",
    "dora": "~0.2.2",
    "eslint": "~1.9.0",
    "eslint-config-airbnb": "~1.0.0",
    "expect": "^1.13.4",
    "mocha": "^2.3.4",
    "pre-commit": "~1.1.2",
    "request": "^2.67.0"
  },
  "peerDependencies": {
    "atool-build": "0.x",
    "dora": "~0.2.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "files": [
    "lib",
    "package.json",
    "README.md"
  ]
}
